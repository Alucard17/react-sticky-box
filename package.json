{
  "name": "react-sticky-box",
  "version": "0.7.4",
  "description": "Boxes that behave nicely while scrolling",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run lint && npm run prettier-all && npm run build:es && npm run build:cjs && npm run build:pure-es",
    "lint": "eslint --max-warnings=0 src docs *.js",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:deploy": "gulp deploy",
    "docz:deploy-from-ci": "gulp deploy-from-ci",
    "is-prettier": "prettier --list-different src/**/*.js docs/**/*.js *.js",
    "prettier": "prettier-eslint --write ",
    "prettier-all": "npm run prettier src/**/*.js",
    "build:es": "rollup --config --environment BUILD_FORMAT:esm --file dist/react-sticky.es.js",
    "build:pure-es": "rollup --config --environment PURE:true,BUILD_FORMAT:esm --file dist/react-sticky.esnext.js",
    "build:cjs": "rollup --config --environment BUILD_FORMAT:cjs --file dist/react-sticky.cjs.js",
    "precommit": "lint-staged",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "scroll",
    "sticky",
    "fixed"
  ],
  "author": "Daniel Berndt <daniel.berndt@gmail.com> (http://danielberndt.net/)",
  "license": "ISC",
  "main": "dist/react-sticky.cjs.js",
  "module": "dist/react-sticky.es.js",
  "repository": "danielberndt/react-sticky-box",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@danielberndt/exec": "^1.1.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-minify-dead-code-elimination": "^0.5.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.19",
    "concurrent-transform": "^1.0.0",
    "docz": "^0.12.5",
    "docz-plugin-css": "^0.11.0",
    "eslint": "^5.0.0",
    "eslint-config-react-app": "^3.0.4",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.1.0",
    "gulp": "^3.9.1",
    "gulp-awspublish": "^3.4.0",
    "gulp-awspublish-router": "^0.2.0",
    "gulp-cloudfront-invalidate-aws-publish": "^1.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier-eslint-cli": "^4.1.1",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "prop-types": "^15.6.2",
    "resize-observer-polyfill": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
